<Window x:Class="Vistas.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="500" Width="550" Loaded="Window_Loaded">
    <Grid>
        <Menu HorizontalAlignment="Stretch" Name="menuPrincipal" VerticalAlignment="Top">
            <MenuItem Header="Gestión de Sectores" Name="menuItemSectores" />
            <MenuItem Header="Tipos de Vehiculo" Name="menuItemTipoVehiculo" >
                <MenuItem Header="Agregar" Name="menuItemTipoVehiculoAgregar" Click="menuItemTipoVehiculoAgregar_Click"/>
                <MenuItem Header="Listar" Name="menuItemTipoVehiculoListar" Click="menuItemTipoVehiculoListar_Click"/>
            </MenuItem>
            <MenuItem Header="Gestión de Clientes" Name="menuItemClientes">
                <MenuItem Header="Agregar" Name="menuItemClienteAgregar" Click="menuItemClienteAgregar_Click" />
            </MenuItem>
            <MenuItem Header="Gestión de Estacionamiento" Name="menuItemEstacionamiento" />
        </Menu>
    </Grid>
</Window>
