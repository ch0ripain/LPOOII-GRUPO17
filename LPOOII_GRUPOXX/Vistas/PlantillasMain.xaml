<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

        <ControlTemplate x:Key="PlantillaBoton" TargetType="{x:Type Button}">
            <Border BorderBrush="Gray" BorderThickness="1"
     Background="LightGray">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ContentPresenter Grid.Row="1" HorizontalAlignment="Center"
     VerticalAlignment="Center" />
                </Grid>
            </Border>
        </ControlTemplate>
        <Style x:Key="PlantillaBotonardo" TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Foreground" Value="Whitesmoke"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
        </Style.Triggers>
            <Setter Property="Template" Value="{StaticResource PlantillaBoton}" />
        </Style>

</ResourceDictionary>