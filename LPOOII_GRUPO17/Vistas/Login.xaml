<Window x:Class="Vistas.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:CU="clr-namespace:ControlesDeUsuario;assembly=ControlesDeUsuario"
        Title="Iniciar Sesión" Height="400" Width="400" WindowStartupLocation="CenterScreen" Icon="/Vistas;component/Images/mascaraspiderman.jpg" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/Images/peterparking.jpg" />
        </Grid.Background>
        <CU:LoginUC x:Name="login" Margin="61,77,85,167" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button Content="INICIAR SESIÓN" HorizontalAlignment="Center" Margin="61,208,45,120" Style="{StaticResource EstiloBoton}" Name="btnLogin" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" FlowDirection="LeftToRight" Width="272" Height="33" Background="#FFE8E8E8" Click="btnLogin_Click" FontSize="14" />
        <Label Content="¡BIENVENIDO A PETER PARKING!" Height="37" HorizontalAlignment="Center" Margin="0,22,0,0" Name="lblTitulo" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold" Width="293" BorderBrush="#FFE22D14" Background="#7D000000" />
    </Grid>
</Window>
