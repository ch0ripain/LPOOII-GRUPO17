<Window x:Class="Vistas.ListarTipoVehiculo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="ListarTipoVehiculo" Height="400" Width="600">
    <Window.Resources>
        <ObjectDataProvider x:Key="misTipoVehiculo" ObjectType="{x:Type svc:TrabajarTiposVehiculo}" MethodName="TraerTiposVehiculo"/>
    </Window.Resources>
    <ListView Height="300" Width="500" ItemsSource="{Binding Source={StaticResource misTipoVehiculo}}" >
        <ListView.View>
            <GridView>
                <GridView.Columns>
                    <GridViewColumn Width="100" Header="TVCodigo" DisplayMemberBinding="{Binding Path=TVCodigo}"/>
                    <GridViewColumn Width="300" Header="Descripcion" DisplayMemberBinding="{Binding Path=Descripcion}"/>
                    <GridViewColumn Width="100" Header="Tarifa" DisplayMemberBinding="{Binding Path=Tarifa}"/>
                </GridView.Columns>
            </GridView>
        </ListView.View>
    </ListView>
</Window>
